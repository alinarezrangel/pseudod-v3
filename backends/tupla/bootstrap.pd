funcion __TextoFormatear: yo, ...valores
    __Tupla#PRAGMA_CNAME: {pdcrt_frt_texto_formatear}
    variables i, res, val
    fijar i a 0
    fijar val a 0

    procedimiento consumir
        variable c
        fijar c a yo#en: i
        fijar i a i + 1
        devolver c
    finprocedimiento

    procedimiento emitir: c
        res#agregarAlFinal: c
    finprocedimiento

    procedimiento siguienteValor
        variable ret
        fijar ret a valores#en: val
        fijar val a val + 1
        devolver ret
    finprocedimiento

    fijar res a __CrearArreglo
    mientras i < yo#longitud
        variable c
        fijar c a consumir
        si c = {~}
            fijar c a consumir
            si c = {t}
                res#agregarAlFinal: siguienteValor#comoTexto
            finsi
            si c = {T}
                res#agregarAlFinal: siguienteValor
            finsi
            si c = {~}
                emitir: {~}
            finsi
            si c = {%}
                emitir: __NL
            finsi
            si c = {e}
                emitir: "}"
            finsi
            si c = {E}
                emitir: {»}
            finsi
            si c = {q}
                emitir: {"}
            finsi
            si c = {|}
                necesitas consumir = {%}
                necesitas consumir = __NL
            finsi
        sino
            emitir: c
        finsi
    finmientras

    devolver res#unir
finfuncion

